/* 整体样式 */
.container {
  background-color: #F2f2f2;
  min-height: 100%
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

/* 搜索框样式 */
.searchbar-result{
    margin-top: 0;
    font-size: 14px;
}
.searchbar-result:before{
    display: none;
}
.weui-cell{
    padding: 12px 15px 12px 35px;
}
.weui-search-bar__cancel-btn {
  color: #409EFF;
}

/* 轮播图样式 */
.swiper-box{
  width: 750rpx;
}
.swiper_box {
  width: 100%;
  height: 150px;
}
swiper-item image {
  width: 100%;
  display: inline-block;
  overflow: hidden;
  height: 150px;
}

/* 标题栏样式 */
view.title {
    display: flex;
    align-items: center;
    position: relative;
    padding: 10px 10px 0 12px;
    font-size: 15px;
    color: #656565;
}
view.title:before {
    position: absolute;
    display: block;
    content: ' ';
    left: -5px;
    width: 2px;
    height: 100%;
    background-color: #09bb07;
}
.line_flag {
    width: 3px;
    height: 100%;
    height: 15px;
    display: inline-block;
    background-color: #409EFF;
}
view.title text {
    margin-left: 10px;
    line-height: 18px;
    font-weight: bold;
}

/* 推荐商品列表样式 */
.goods-box{
  display: flex;
  justify-content: space-between;  
  flex-wrap:wrap;
  box-sizing: content-box;
  padding: 24rpx;
}
.goods-container{
  width: 339rpx;
  height: 472rpx;
  background-color: #fff;
  overflow: hidden;
  margin-bottom: 24rpx;
}
.goods-container .img-box{
  width: 339rpx;
  height: 339rpx;
  overflow: hidden;
}
.goods-container .img-box image{
   width: 339rpx;
   height: 339rpx;
}
.goods-container .goods-title{
  width: 280rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  font-size: 24rpx;
  padding: 24rpx 0 0rpx 0;
  color:#000;
  margin-left: 24rpx;
}
.goods-container .goods-price{
  width: 280rpx;
  overflow: hidden;
  font-size: 24rpx;
  padding: 24rpx 0;
  color:#e64340;
  margin-left: 24rpx;
}

/* 下拉至底提示语 */
.no-more-goods{
  text-align: center;
  font-size: 24rpx;
  padding-bottom:48rpx; 
  color: #999;
}
